{
    "manifest": {
        "$CURRENT_DIR": "."
    },
    "run": {
        "random_seed": 1,
        "tstop": 15.0,
        "dt": 0.025
    },
    "network": "circuit_config.json",
    "node_set": "Mosaic",
    "target_simulator": "NEURON",
    "output": {
        "output_dir": "output"
    },
    "inputs": {
        "depol_mosaic": {
            "node_set": "Mosaic",
            "input_type": "current_clamp",
            "module": "noise",
            "mean_percent": 95.0,
            "variance": 0.001,
            "delay": 0.0,
            "duration": 15000.0
        },
        "proj_spikes_inject": {
            "node_set": "post",
            "input_type": "spikes",
            "delay": 0.0,
            "duration": 5000.0,
            "module": "synapse_replay",
            "spike_file": "minimal_circuit/proj_spikes.dat",
            "source": "virtual_neurons"
        }
    },
    "connection_overrides": [
        {
            "source": "pre",
            "target": "post",
            "weight": 1.0,
            "name": "all-all"
        },
        {
            "source": "virtual_neurons",
            "target": "post",
            "weight": 1.0,
            "name": "proj-all"
        }
    ],
    "reports": {
        "soma": {
            "cells": "Mosaic",
            "type": "compartment",
            "variable_name": "v",
            "unit": "mV",
            "dt": 0.1,
            "start_time": 0.0,
            "end_time": 5000.0
        }
    }
}
