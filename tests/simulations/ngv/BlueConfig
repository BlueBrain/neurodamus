Stimulus pulse1
{
        Mode                    Current
        Pattern                 Pulse
        AmpStart                20.000000
        AmpEnd                  20.000000
        Frequency               10
        Width                   5
        Delay                   1.000000
        Duration                3000
}


Stimulus ThresholdExc
{

              Mode Current
           Pattern Noise
       MeanPercent 200
          Variance 0.001
             Delay 0.000000
          Duration 30000.000000
}


